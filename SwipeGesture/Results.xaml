<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SwipeGesture.Results">
    <ContentPage.Content>
        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="20*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="35*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="35*" />
                <ColumnDefinition Width="10*" />
            </Grid.ColumnDefinitions>

            <Label x:Name="_Score" Text="You Got: " Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" />



        </Grid>
    </ContentPage.Content>
</ContentPage>
